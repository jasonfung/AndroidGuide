<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6CE">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Terminology page"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/termDesc"
        android:id="@+id/termDesc"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/search"
        android:id="@+id/textView8"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/termDesc"
        android:layout_toLeftOf="@+id/textView10"
        android:layout_toStartOf="@+id/textView10" />


    <AutoCompleteTextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/auto1"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />


</RelativeLayout>